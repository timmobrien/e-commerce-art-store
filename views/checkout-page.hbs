{{> nav-bar}}

<div class="row d-flex justify-content-center ">
        
        <div class="col-md-4 col-lg-3 col-xl-2 border border-secondary mt-2 ">
            <h4 class="text-center mt-5">Total cost:  </h4>
            <p class="text-center order-price">$ {{session.cart.totalPrice}}</p>

        </div>


        <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1 mt-2">
            <form>

                <div class="form-outline mb-2">
                    <label class="form-label" for="cardholder-name">Cardholder Name</label>
                    <input type="text" id="cardholder-name" class="form-control form-control-lg"
                        placeholder="Enter the name on the credit card" />
                </div>

                <div class="form-outline mb-2">
                    <label class="form-label" for="billing-zip">Billing ZIP Code</label>
                    <input type="text" id="billing-zip" class="form-control form-control-lg"
                        placeholder="6000" />
                </div>

                <div class="form-outline mb-2">
                    <label class="form-label" for="card-number">Card number</label>
                    <input type="number" id="card-number" class="form-control form-control-lg"
                        placeholder="Enter your credit card number" />
                </div>

                <div class="form-outline mb-2">
                    <label class="form-label" for="card-expiration-month">Expiration month</label>
                    <input type="text" id="card-expiration-month" class="form-control form-control-lg" placeholder="01" />
                </div>

                <div class="form-outline mb-2">
                    <label class="form-label" for="card-expiration-year">Expiration year</label>
                    <input type="text" id="card-expiration-year" class="form-control form-control-lg" placeholder="2025" />
                </div>

                <div class="form-outline mb-2">
                    <label class="form-label" for="card-cvc">CVC</label>
                    <input type="number" id="card-cvc" class="form-control form-control-lg" placeholder="3 digit number on the back of your card" />
                </div>

                <div class="text-center text-lg-start mt-2 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg"
                            style="padding-left: 2.5rem; padding-right: 2.5rem;">Confirm</button>
                
                </div>

            </form>
        </div>
    </div>
{{> footer}}
<script src="https://js.stripe.com/v3/"></script>
<script src="/js/checkout.js"></script>