<div class="card mb-4">
  <div class="card-header py-3">
    <h5 class="mb-0">Ordered on: {{date}}</h5>
  </div>
  <div class="card-body">
    <div class="row mb-2">

      <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
        <!-- Data -->
        <p><strong>Items:</strong></p>
        {{#each orderItems as |orderItem|}}
            <p>{{itemName}}</p>
            <p>Qty: {{itemQty}}</p>
        {{/each}}

        <!-- Data -->
      </div>

      <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
        <!-- Quantity -->
        <div class="d-flex mb-4" style="max-width: 300px">

          <div class="form-outline">
            <label class="form-label" for="form1"><strong>Total Price:</strong>
              $ {{totalPrice}}</label>
          </div>
        </div>
      </div>
    </div>
    <hr />
  </div>
</div>

